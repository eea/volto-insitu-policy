/*******************************
            Header
*******************************/

/*----------------------------------------------------------------------------
   HEADER MAIN BAR
----------------------------------------------------------------------------*/

.top.bar {
  background-color: @insitu-brand !important;
  .divider.text {
    color: @socialLinkColor;
  }
  .ui.dropdown {
    color: @socialLinkColor;
  }
}

.main.bar > .ui.container > .ui.grid div:first-child div:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0.65rem;
  max-width: 340px;
}

.eea.header .eea-logo {
  height: 50px;
}

